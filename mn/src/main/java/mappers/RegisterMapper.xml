<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="RegisterMap">

<insert id="registerJoin" parameterType="RegistVO">
	insert into member(mem_id,mem_name,mem_pass,mem_tel)
	values(#{mem_id},#{mem_name},#{mem_pass},#{mem_tel})
</insert>

<select id="login" parameterType="RegistVO" resultType="RegistVO">
	select *
	from member
	where Mem_id = #{mem_id} and MEM_PASS= #{mem_pass}
</select>




</mapper>